<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.awizom.spdeveloper">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/sp_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sp_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".HomePage"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClientPropertyDetail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddClient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClientHistory"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FollowUP"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FollowUpHistory"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PropertiesActivity"
            android:label="@string/title_activity_properties"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PropertiesListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddClientProperty"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".NotificationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyEmpTeam"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>